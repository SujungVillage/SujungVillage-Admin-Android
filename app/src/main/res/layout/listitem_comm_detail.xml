<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="14dp"
    android:paddingHorizontal="40dp"
    android:background="@drawable/style_comm_detale_comment_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_admin"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:background="@drawable/style_comm_listitem_admin_border"
            android:gravity="center"
            android:padding="3dp"
            android:text="관리자"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:visibility="gone"
            android:fontFamily="@font/medium"
            android:layout_gravity="center" />
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:fontFamily="@font/medium"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:text="익명1" />
        <TextView
            android:id="@+id/text_comment_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:textSize="10dp"
            android:text="댓글삭제"
            android:textColor="#989898"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:visibility="invisible"
            android:padding="1dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_cal_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="10dp"
        android:textColor="#989898"
        android:text="2022/07/13 20:46"
        android:fontFamily="@font/light"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:fontFamily="@font/light"
        android:textColor="@color/black"
        android:text="그니까 나도 오늘 너무 시끄러웠어" />
</LinearLayout>